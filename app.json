{
  "id": "info.matjaz.presence",
  "name": {
    "en": "Better Presence"
  },
  "version": "1.0.0",
  "compatibility": "0.x",
  "description": "Track presence using arpscan, ping, iBeacon etc.",
  "category": [
    "security",
    "internet"
  ],
  "images": {
    "large": "assets/images/large.png",
    "small": "assets/images/small.png"
  },
  "contributors": {
    "developers": [
      {
        "name": "Matjaž Lipuš",
        "website": "http://matjaz.info",
        "email": "matjazl@gmail.com"
      }
    ]
  },
  "author": {
    "name": "Matjaž Lipuš",
    "website": "http://matjaz.info",
    "email": "matjazl@gmail.com"
  },
  "flow": {
    "triggers": [
      {
        "id": "presenceChanged",
        "title": {
          "en": "Presence changed"
        },
        "args": [
          {
            "name": "id",
            "type": "text",
            "placeholder": {
              "en": "Device ID"
            }
          }
        ],
        "tokens": [
          {
            "name": "isPresent",
            "title": {
              "en": "Present"
            }
          }
        ]
      },
      {
        "id": "presenceChangedAny",
        "title": {
          "en": "Presence changed"
        },
        "tokens": [
          {
            "name": "isPresent",
            "title": {
              "en": "Present"
            }
          },
          {
            "name": "id",
            "title": {
              "en": "ID"
            }
          }
        ]
      }
    ]
  }
}